<templateSet group="Perl5">
  <template name="sql" value="my $query = &lt;&lt;'SQL';&#10;    $END$&#10;SQL&#10;" description="query" toReformat="true" toShortenFQNames="true" deactivated="true">
    <context>
      <option name="SQL" value="false" />
    </context>
  </template>
  <template name="do" value="do&#10;{&#10;    $SELECTION$$END$&#10;} " description="do block" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="if" value="if ($CONDITION$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="if block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="CONDITION" expression="" defaultValue="&quot;$cond&quot;" alwaysStopAt="true" />
  </template>
  <template name="sub" value="sub $NAME$ &#10;{&#10;    my ($ARGUMENTS$) = @_;&#10;    $END$&#10;}" description="sub definition" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="NAME" expression="" defaultValue="&quot;subname&quot;" alwaysStopAt="true" />
    <variable name="ARGUMENTS" expression="" defaultValue="&quot;$self&quot;" alwaysStopAt="true" />
  </template>
  <template name="ust" value="use strict;&#10;$END$&#10;" description="use strict" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="upa" value="use parent qw/$PACKAGE$/;&#10;$END$" description="use parent" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="PACKAGE" expression="" defaultValue="&quot;Foo::Bar&quot;" alwaysStopAt="true" />
  </template>
  <template name="uwa" value="use warnings$PARAM$;&#10;$END$&#10;" description="use warnings" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="PARAM" expression="" defaultValue="&quot; FATAL =&gt; 'all'&quot;" alwaysStopAt="true" />
  </template>
  <template name="uv" value="use v5.$MINOR$;&#10;$END$&#10;" description="use version" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="MINOR" expression="" defaultValue="&quot;10&quot;" alwaysStopAt="true" />
  </template>
  <template name="fe" value="foreach my $ELEMENT$ ($LIST$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="foreach block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="ELEMENT" expression="" defaultValue="&quot;$element&quot;" alwaysStopAt="true" />
    <variable name="LIST" expression="" defaultValue="&quot;@list&quot;" alwaysStopAt="true" />
  </template>
  <template name="ma" value="map {$END$} $LIST$" description="map expression" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="LIST" expression="" defaultValue="&quot;@list&quot;" alwaysStopAt="true" />
  </template>
  <template name="fo" value="for(my $INIT$; $CONDITION$; $INCREMENT$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="for block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="INIT" expression="" defaultValue="&quot;$i = 0&quot;" alwaysStopAt="true" />
    <variable name="CONDITION" expression="" defaultValue="&quot;$i &lt; 0&quot;" alwaysStopAt="true" />
    <variable name="INCREMENT" expression="" defaultValue="&quot;$i++&quot;" alwaysStopAt="true" />
  </template>
  <template name="el" value="else&#10;{&#10;    $SELECTION$$END$&#10;}" description="else block" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="eli" value="elsif($CONDITION$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="elsif block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="CONDITION" expression="" defaultValue="&quot;$cond&quot;" alwaysStopAt="true" />
  </template>
  <template name="gr" value="grep {$END$} $LIST$" description="grep expression" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="LIST" expression="" defaultValue="&quot;@list&quot;" alwaysStopAt="true" />
  </template>
  <template name="unl" value="unless ($EXPR$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="unless block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="EXPR" expression="" defaultValue="&quot;$expr&quot;" alwaysStopAt="true" />
  </template>
  <template name="gi" value="given ($EXPRESSION$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="given block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="EXPRESSION" expression="" defaultValue="&quot;$expr&quot;" alwaysStopAt="true" />
  </template>
  <template name="wh" value="while ($EXPR$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="while block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="EXPR" expression="" defaultValue="&quot;$expr&quot;" alwaysStopAt="true" />
  </template>
  <template name="cont" value="continue&#10;{&#10;    $SELECTION$$END$&#10;}" description="continue block" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="ev" value="eval {$SELECTION$$END$}" description="eval block" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="unt" value="until ($EXR$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="until block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="EXR" expression="" defaultValue="&quot;$expr&quot;" alwaysStopAt="true" />
  </template>
  <template name="pod" value="=head3 $SUBNAME$&#10;&#10;$END$&#10;&#10;=cut&#10;" description="quick pod template" toReformat="false" toShortenFQNames="true" deactivated="true">
    <variable name="SUBNAME" expression="" defaultValue="&quot;subname&quot;" alwaysStopAt="true" />
  </template>
  <template name="cons" value="use constant {&#10;    $CONST_NAME$ =&gt; $CONST_VAL$&#10;};" description="Constant definition" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="CONST_NAME" expression="" defaultValue="&quot;CONST&quot;" alwaysStopAt="true" />
    <variable name="CONST_VAL" expression="" defaultValue="&quot;42&quot;" alwaysStopAt="true" />
  </template>
  <template name="sa" value="sub {$END$}" description="anon sub" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="so" value="sort {$END$} $LIST$" description="sort expression" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="LIST" expression="" defaultValue="&quot;@list&quot;" alwaysStopAt="true" />
  </template>
  <template name="R" value="[&#10;    $SELECTION$$END$&#10;]" description="surround with []" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="serr" value="say STDERR &quot;$END$&quot;;&#10;" description="say STDERR..." toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="sout" value="say &quot;$END$&quot;;&#10;" description="say STDOUT ..." toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="perr" value="print STDERR &quot;$END$&quot;;&#10;" description="print STDERR..." toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="pout" value="print &quot;$END$&quot;;&#10;" description="print STDOUT ..." toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="me" value="method $NAME$ ($SIGNATURE$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="method definition" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="NAME" expression="" defaultValue="&quot;methodname&quot;" alwaysStopAt="true" />
    <variable name="SIGNATURE" expression="" defaultValue="&quot;$param&quot;" alwaysStopAt="true" />
  </template>
  <template name="fu" value="func $NAME$ ($SIGNATURE$)&#10;{&#10;    $SELECTION$$END$&#10;}" description="function definition" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="NAME" expression="" defaultValue="&quot;funcname&quot;" alwaysStopAt="true" />
    <variable name="SIGNATURE" expression="" defaultValue="&quot;$arg&quot;" alwaysStopAt="true" />
  </template>
  <template name="tr" value="try{&#10;    $SELECTION$$END$&#10;}" description="Try block" toReformat="true" toShortenFQNames="true" deactivated="true" />
  <template name="ca" value="catch $EXPR$ {&#10;    $SELECTION$$END$&#10;}" description="Catch block" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="VAR" expression="" defaultValue="&quot;($expr)&quot;" alwaysStopAt="true" />
  </template>
</templateSet>